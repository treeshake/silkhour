{{ 'ring-design-summary.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

{%- capture header_content -%}{{ content_for_header }}{%- endcapture -%}
{%- assign page_url = header_content | split: '"pageurl":"' | last | split: '"' | first | split: '.myshopify.com' | last | replace: '\/', '/' | replace: '%20', ' ' | replace: '\u0026', '&' -%}
{% assign ring_variant_id = page_url | split: 'ring-variant-id=' | last | split: '&' | first | plus: 0 %}     
{% assign stone_product_id = page_url | split: 'stone-product-id=' | last %}
{% assign engagement_product_img = '' %}
{% assign engagement_stone_img = all_products[stone_product_id].featured_image %}

{% for product in collections['engagement-ring-setting'].products %}
    {% for variant in product.variants %}
       {% if variant.id == ring_variant_id %}
            {% assign engagement_product_img = product.media[1] %}
            {% break %}
        {% endif %}
    {% endfor %}
{% endfor %}
  

<div class="ring-design-summary color-{{ section.settings.color_scheme }} gradient">
  <div class="page-width section-{{ section.id }}-padding">
    <div class="ring-design_images">
        <div class="media media--transparent" style="padding-bottom: {{ 1 | divided_by: engagement_product_img.aspect_ratio | times: 100 }}%;">
            {%- assign widths = '165, 360, 535, 750, 1070, 1500' -%}
            {%- capture sizes -%}
            (min-width: {{ settings.page_width }}px) {{ settings.page_width | minus: 100 | divided_by: 2 }}px,
            (min-width: 750px) calc((100vw - 130px) / 2), calc((100vw - 50px) / 2)
            {%- endcapture -%}
            {{
                engagement_product_img
              | image_url: width: 1500
              | image_tag: sizes: sizes, widths: widths, fetchpriority: 'auto'
            }}
          </div>
          <div class="media media--transparent" style="padding-bottom: {{ 1 | divided_by: engagement_stone_img.aspect_ratio | times: 100 }}%;">
            {%- assign widths = '165, 360, 535, 750, 1070, 1500' -%}
            {%- capture sizes -%}
            (min-width: {{ settings.page_width }}px) {{ settings.page_width | minus: 100 | divided_by: 2 }}px,
            (min-width: 750px) calc((100vw - 130px) / 2), calc((100vw - 50px) / 2)
            {%- endcapture -%}
            {{
                engagement_stone_img
              | image_url: width: 1500
              | image_tag: sizes: sizes, widths: widths, fetchpriority: 'auto'
            }}
          </div>
    </div>
    <div class="ring-design_information">
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Ring Design Summary",
  "tag": "section",
  "class": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:sections.all.colors.label",
      "default": "scheme-1"
    },
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    }
  ]
}
{% endschema %}
